@rendermode InteractiveServer

@using CineSync.Components.Buttons;
@using CineSync.Components.Utils

<PopUpLayout @ref=PopUpLayout Id="editProfileModal">
    <Header>
        <div class="title">Add to colection</div>
    </Header>
    <Body>
        <div class="modal-body">
            <StateMessage message="@ErrorMessage" />
            <div class="form-group">
                <label for="profilePic">Profile Picture:</label>
                <InputFile id="profilePicInput" OnChange="HandleSelected" accept="image/*"/>
            </div>
        </div>
    </Body>
    <Footer>
        <RectButton2 Text="Cancel" DataDismiss="modal"></RectButton2>
        <RectButton1 Text="Update" OnClick="() => { UploadProfilePic(); }"/>
    </Footer>
</PopUpLayout>
<script>
    function resetFileInput(elementId) {
        document.getElementById(elementId).value = "";
    }
</script>