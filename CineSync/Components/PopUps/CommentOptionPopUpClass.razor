            <path d="M19.25 11.958H22.75V23.9163H19.25V11.958Z" fill="red" />
        </svg>
        <div class="title">Report Comment</div>
    </Header>
    <Body>
        <div>
            <label for="reportReason" style="color:white;">Reason for reporting:</label>
            <textarea id="reportReason" name="reportReason" rows="4" cols="34" placeholder="Enter the reason here..."></textarea>
        </div>
    </Body>
    <Footer>
        <RectButton2 Text="Cancel" DataDismiss="modal"> </RectButton2>
        <RectButton1 Text="Report" DataDismiss="modal"> </RectButton1>
    </Footer>
</PopUpLayout>


