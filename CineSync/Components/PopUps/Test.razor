@page "/test"
<!-- Button trigger modal -->
<button type="button" class="btn btn-primary" data-toggle="modal" data-target="#exampleModal">
    Launch demo modal
</button>

<!-- Modal -->
<div class="modal fade" id="exampleModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered" role="document">
        <div class="modal-content border-white">
            <div class="modal-header">
                <h5 class="modal-title text-white" id="exampleModalLabel">Modal title</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body bg-dark">
                <div class="star-rating text-center">
                    <input type="radio" id="star5" name="rating" value="5" @onclick="() => SetRating(5)" /><label for="star5">&#9733;</label>
                    <input type="radio" id="star4" name="rating" value="4" @onclick="() => SetRating(4)" /><label for="star4">&#9733;</label>
                    <input type="radio" id="star3" name="rating" value="3" @onclick="() => SetRating(3)" /><label for="star3">&#9733;</label>
                    <input type="radio" id="star2" name="rating" value="2" @onclick="() => SetRating(2)" /><label for="star2">&#9733;</label>
                    <input type="radio" id="star1" name="rating" value="1" @onclick="() => SetRating(1)" /><label for="star1">&#9733;</label>
                </div>
            </div>
            <div class="modal-footer bg-dark">
                <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                <button type="button" class="btn btn-primary" @onclick="SaveRating">Save changes</button>
            </div>
        </div>
    </div>
</div>

<p>Your rating: @Rating</p>

<style>
    .star-rating {
        font-size: 36px;
    }

        .star-rating input[type="radio"] {
            display: none;
        }

        .star-rating label {
            display: inline-block;
            cursor: pointer;
            color: #ccc;
            transition: color 0.3s;
        }

        .star-rating input[type="radio"]:checked ~ label {
            color: gold;
        }

        .star-rating label:hover,
        .star-rating input[type="radio"]:hover ~ label {
            color: gold;
        }

    .modal-content {
        background-color: #343a40; /* Blackish background */
    }

    .modal-header {
        border-bottom: 1px solid #ffffff; /* White border */
    }

    .modal-title {
        color: #ffffff; /* White text */
    }

    .modal-body,
    .modal-footer {
        border-top: 1px solid #ffffff; /* White border */
    }

    .modal-footer {
        background-color: #343a40; /* Blackish background */
    }

    .btn-primary {
        background-color: #007bff; /* Blue button */
        border-color: #007bff; /* Blue border */
    }

        .btn-primary:hover {
            background-color: #0056b3; /* Darker blue on hover */
            border-color: #0056b3; /* Darker blue border on hover */
        }

        .btn-primary:focus {
            box-shadow: 0 0 0 0.2rem rgba(0, 123, 255, 0.5); /* Blue focus shadow */
        }

    .btn-secondary {
        background-color: #6c757d; /* Gray button */
        border-color: #6c757d; /* Gray border */
    }

        .btn-secondary:hover {
            background-color: #545b62; /* Darker gray on hover */
            border-color: #545b62; /* Darker gray border on hover */
        }

        .btn-secondary:focus {
            box-shadow: 0 0 0 0.2rem rgba(108, 117, 125, 0.5); /* Gray focus shadow */
        }
</style>

@code {
    private int Rating { get; set; }

    private void SetRating(int rating)
    {
        Rating = rating;
    }

    private void SaveRating()
    {
        // Implement save rating logic here
        // For demonstration purposes, we'll just print the rating to the console
        Console.WriteLine($"Rating saved: {Rating}");
    }
}

