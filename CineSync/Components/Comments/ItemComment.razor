            <NavLink href="@($"/Profile/{Comment.Autor!.Id}")">
                <div class="UsernameConteiner">
                    @if (Comment.Autor!.ProfileImage != null && Comment.Autor!.ProfileImage.Length > 0)
                    {
                        <img class="user-profilepic" src="@(ImageConverter.ConverBytesTo64(Comment.Autor!.ProfileImage))" alt="foto" />
                    }
                    else
                    {
                        <img class="user-profilepic"  src="NoProfilePic.png" alt="foto" />
                    }
                    <div>@Comment.Autor!.UserName</div>
                </div>
            </NavLink>

            <CustomAuthorizedView CheckAuthentication=true>
                <CustomAuthorized>

