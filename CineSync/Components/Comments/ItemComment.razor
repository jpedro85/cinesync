                                        <rect width="50" height="50" fill="currentcolor" />
                                    </clipPath>
                                </defs>
                            </svg>
                        </div>
                    }

                </CustomAuthorized>
            </CustomAuthorizedView>

        </div>

        <div class="commend-header-rigth">

            @{
                daysInDiference = (DateTime.Now.Date - Comment.TimeStamp.Date).Days;
            }

            @if(daysInDiference == 0)
            {
                <div class="commen-time-stanp">today at @(Comment.TimeStamp.Hour):@(Comment.TimeStamp.Minute)</div>
            }
            else if(daysInDiference < 7)
            {
                <div class="commen-time-stanp">@daysInDiference @( daysInDiference == 1 ? "day" : "days") ago</div>
            }
            else
            {
                @( weeks = daysInDiference/7 - daysInDiference%7 == 0 ? 0 : daysInDiference%7 ) 
                @( weeks == 1 ? "week" : "weeks" )
                <div class="commen-time-stanp">@weeks ago</div>
            }
            <div class="comment-options" >
                <svg width="40" height="40" viewBox="0 0 42 41" fill="none" xmlns="http://www.w3.org/2000/svg">
