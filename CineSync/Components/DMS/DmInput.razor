@using CineSync.Components.PopUps
@rendermode InteractiveServer

<div class="dminput-main-container">

    @if (!_show)
    {
        <div class="attchements-rigth" @onclick="()=>{ _show = true; StateHasChanged(); }">
            <div class="back attchements-button-containor">
                <svg xmlns="http://www.w3.org/2000/svg" fill="currentcolor" color="currentcolor" height="24" viewBox="0 0 24 24" width="24" focusable="false" b-6gs05m5gte=""><path d="M18.4 14.6 12 8.3l-6.4 6.3.8.8L12 9.7l5.6 5.7z " b-6gs05m5gte=""></path></svg>
            </div>
        </div>
    }
    else if(newMessage.ReplayMessage != null || selectedFilesWithPreviews.Count != 0 || ErrorMessages.Count != 0 )
    {
        <div class="attchements-rigth" @onclick="()=>{ _show = false; InvokeAsync(StateHasChanged); }">
            <div class="back attchements-button-containor">
                <svg xmlns="http://www.w3.org/2000/svg" fill="currentcolor" color="currentcolor" height="24" viewBox="0 0 24 24" width="24" focusable="false" b-6gs05m5gte=""><path d="m18 9.28-6.35 6.35-6.37-6.35.72-.71 5.64 5.65 5.65-5.65z" b-6gs05m5gte=""></path></svg
            </div>
        </div>        
    }

    @if (newMessage.ReplayMessage != null)
    {
        <div class="replying-container" style=" @( _show ? "" : "display:none;")">

            <div class="replying">
                Replying to:
            </div>
            <hr>

            <div class="replay-content-conteiner">

                <div class="" >

                    @if( !string.IsNullOrEmpty( newMessage.ReplayMessage.Content ) )
                    {
                        <div>
                            @newMessage.ReplayMessage.Content
                        </div>
                    }
                    else if ( newMessage.ReplayMessage.Attachements != null && newMessage.ReplayMessage.Attachements.Count > 0)
                    {
                        <div>
                            Anexo
                        </div>
                    }

                </div>

                <div class="button-cancel" 
                    @onclick=" async () => { 
                        await OnRemoveReply.InvokeAsync(newMessage.ReplayMessage);
                        newMessage.ReplayMessageId = null; 
                        newMessage.ReplayMessage = null; 
                        StateHasChanged(); 
                    } ">
                    <svg xmlns="http://www.w3.org/2000/svg" width="25" height="25" viewBox="0 0 32 32"><path fill="currentColor" d="M16 2C8.2 2 2 8.2 2 16s6.2 14 14 14s14-6.2 14-14S23.8 2 16 2m0 26C9.4 28 4 22.6 4 16S9.4 4 16 4s12 5.4 12 12s-5.4 12-12 12"/><path fill="currentColor" d="M21.4 23L16 17.6L10.6 23L9 21.4l5.4-5.4L9 10.6L10.6 9l5.4 5.4L21.4 9l1.6 1.6l-5.4 5.4l5.4 5.4z"/></svg>
                </div>
            </div>
            
        </div>           
    }

    @if (showEmojiPicker)
    {
        <EmojiPicker OnEmojiSelected="AddEmoji" />
    }

    @if ((selectedFilesWithPreviews.Count != 0 || ErrorMessages.Count != 0))
    {
        <div class="attachment-container" style=" @( _show ? "" : "display:none;")">

            <ImageAttachments 
                SelectedClass="@SelectedClass"
                SelectedFileStyle="@SelectedClass"
                SelectedFilesWithPreviews="selectedFilesWithPreviews" 
                OnRemove="RemoveAttachment" 
            />
            
            @foreach (string ErrorMessage in ErrorMessages)
            {
                <p class="error">@ErrorMessage</p>
            }
        </div>
    }
    
    <div class="dm-input-container" @onkeydown="HandleKeyPress">
        <button class="icon-button user-select-none" @onclick="ToggleEmojiPicker">
            <svg xmlns="http://www.w3.org/2000/svg" width="25" height="25" viewBox="0 0 512 512"><path fill="currentColor" d="M464 256a208 208 0 1 0-416 0a208 208 0 1 0 416 0M0 256a256 256 0 1 1 512 0a256 256 0 1 1-512 0m177.6 62.1c15.2 16.4 41.2 33.9 78.4 33.9s63.2-17.5 78.4-33.9c9-9.7 24.2-10.4 33.9-1.4s10.4 24.2 1.4 33.9c-22 23.8-60 49.4-113.6 49.4s-91.7-25.5-113.6-49.4c-9-9.7-8.4-24.9 1.4-33.9s24.9-8.4 33.9 1.4zM144.4 208a32 32 0 1 1 64 0a32 32 0 1 1-64 0m192-32a32 32 0 1 1 0 64a32 32 0 1 1 0-64"/></svg>
        </button>
        <input @bind-value:event="oninput" @bind-value="@newMessage.Content" placeholder="Mensagem..." class="dm-input user-select-none"/>
        <label for="file_upload" class="icon-button user-select-none">
            <svg xmlns="http://www.w3.org/2000/svg" width="25" height="25" viewBox="0 0 15 15"><path fill="currentColor" d="m4.5 3.5l.354-.354a.5.5 0 0 0-.708 0zM1.5 1h12V0h-12zm12.5.5v12h1v-12zM13.5 14h-12v1h12zM1 13.5v-12H0v12zm.5.5a.5.5 0 0 1-.5-.5H0A1.5 1.5 0 0 0 1.5 15zm12.5-.5a.5.5 0 0 1-.5.5v1a1.5 1.5 0 0 0 1.5-1.5zM13.5 1a.5.5 0 0 1 .5.5h1A1.5 1.5 0 0 0 13.5 0zm-12-1A1.5 1.5 0 0 0 0 1.5h1a.5.5 0 0 1 .5-.5zm-1 11h14v-1H.5zm.354-3.146l4-4l-.708-.708l-4 4zm3.292-4l7 7l.708-.708l-7-7zM10.5 5a.5.5 0 0 1-.5-.5H9A1.5 1.5 0 0 0 10.5 6zm.5-.5a.5.5 0 0 1-.5.5v1A1.5 1.5 0 0 0 12 4.5zm-.5-.5a.5.5 0 0 1 .5.5h1A1.5 1.5 0 0 0 10.5 3zm0-1A1.5 1.5 0 0 0 9 4.5h1a.5.5 0 0 1 .5-.5z" /></svg>
        </label>
        <InputFile id="file_upload" class="file-input" OnChange="HandleFileSelected" multiple accept="image/*" style="display:none"/>
        <button class="icon-button user-select-none" @onclick="SendMessage">
            <svg xmlns="http://www.w3.org/2000/svg" width="25" height="25" viewBox="0 0 1792 1792"><path fill="currentColor" d="M1764 11q33 24 27 64l-256 1536q-5 29-32 45q-14 8-31 8q-11 0-24-5l-453-185l-242 295q-18 23-49 23q-13 0-22-4q-19-7-30.5-23.5T640 1728v-349l864-1059l-1069 925l-395-162q-37-14-40-55q-2-40 32-59L1696 9q15-9 32-9q20 0 36 11" /></svg>
        </button>
    </div>

</div>
